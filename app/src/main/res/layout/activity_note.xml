<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dailyNoteImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/dailynote_image" />

            <ImageView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/explain2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/two" />

            <ImageView
                android:id="@+id/explain3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/three" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Image1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_01" />

                <ImageView
                    android:id="@+id/Image2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_02" />

                <ImageView
                    android:id="@+id/Image3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_03" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/monoImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_01_mono" />

                <ImageView
                    android:id="@+id/monoImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_02_mono" />

                <ImageView
                    android:id="@+id/monoImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sdg_03_mono" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>